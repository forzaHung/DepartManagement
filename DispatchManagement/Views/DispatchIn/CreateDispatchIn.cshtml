                                                                <option value="@item.Id">@item.Name</option>
                                                            }
                                                        }
                                                    </select>
                                                    @Html.ValidationMessageFor(model => model.DispatchType, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
